<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marnie.Layout.LoginPage"
             xmlns:i18n="clr-namespace:Marnie;assembly=Marnie">

    <StackLayout Padding = '20' Spacing = '10'>
        <Label Text="{i18n:TranslateExtension LogInLabel}" FontSize="Large" HorizontalOptions="Center"/>
        <Entry Placeholder="{i18n:TranslateExtension Email}"/>
        <Entry Placeholder="{i18n:TranslateExtension Password}" IsEnabled="True"/>
        <Button Text="{i18n:TranslateExtension LogInBtn}" Clicked="LogInBtn_OnClicked"/>
        <Button Text="{i18n:TranslateExtension SignUpBtn}" Clicked="SignUpBtn_OnClicked"/>
      
    </StackLayout>
</ContentPage>