<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marnie.Layout.TrainsFound"
             Title="TrainsFound">

    <StackLayout Padding="5" Spacing="5">        
        <ListView x:Name="routesListView"  ItemSelected="OnRouteSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextCell Text ="{Binding Name}" Detail="{Binding Id}"/>-->
                    <ViewCell>
                        <StackLayout Orientation="Vertical">                            
                                <Label Text="{Binding Name}"/>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding StopFrom.DepartureTime}"/>
                                <Label Text="{Binding StopTo.ArrivalTime}"/>
                            </StackLayout>
                        </StackLayout>
                        </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
</ContentPage>